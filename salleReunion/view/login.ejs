    <!-- Contenu principal -->
    <div class="container">
        <h1>Connexion</h1>
        <% if (errorMessage) { %>
            <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
            </div>
        <% } else if (successMessage) { %>
            <div class="alert alert-success" role="alert">
                <%= successMessage %>
            </div>
        <% } %>

        <!-- Formulaire de connexion -->
        <form id="loginForm" action="/users/login" method="post">
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="Adresse email" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
            </div>
            <div class="form-group">
                <p style="color: #f8f9fa;">Vous n'avez pas de compte ? <a href="/users/register" style="color: #8f1919;">Créer un compte</a></p>
                <a href="/forgot-password" style="color: #8f1919;">Mot de passe oublié ?</a>
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>

    <!-- Footer -->
